<resources>
    <style name="MyDictionaryRecyclerItem" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/item_film_recycler_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ItemRounded">
        <item name="cornerSize">15%</item>
    </style>

    <style name="BaseTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderTextStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/color_text_header</item>
        <item name="android:textSize">@dimen/text_size_standard_header</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>